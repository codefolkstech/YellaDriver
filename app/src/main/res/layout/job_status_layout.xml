<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/card_text_purple"
            app:cardCornerRadius="9dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_job_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="@string/yalla_job_number"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textview_job_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:text="@string/yalla_job_date"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageviewOrder"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_below="@+id/textview_job_number"
                    android:src="@drawable/path_icon"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="17dp" />
                <TextView
                    android:id="@+id/textview_job_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yalla_job_order_title"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/textview_job_number"
                    android:layout_toRightOf="@+id/imageviewOrder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="14sp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/textview_job_number"
                    android:layout_toRightOf="@+id/textview_job_title"
                    ></TextView>
                <ImageView
                    android:id="@+id/imageviewLocation"
                    android:layout_width="11dp"
                    android:layout_height="12dp"
                    android:layout_below="@+id/imageviewOrder"
                    android:src="@drawable/location"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="14dp"
                    ></ImageView>
                <TextView
                    android:id="@+id/textviewDistanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yalla_job_order_distance_title"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_job_title"
                    android:layout_toRightOf="@+id/imageviewOrder"/>
                <TextView
                    android:id="@+id/textview_distance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="14sp"
                    android:text="28 KMS"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textview_job_title"
                    android:layout_toRightOf="@+id/textviewDistanceText"
                    ></TextView>
                <ImageView
                    android:id="@+id/imageviewEarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/earnings"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="70dp"
                    android:layout_below="@+id/textview_job_title"
                    android:layout_toRightOf="@id/textview_distance_value"/>
                <TextView
                    android:id="@+id/textview_earnings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="14sp"
                    android:text="Earnings :"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/textview_job_title"
                    android:layout_toRightOf="@+id/imageviewEarnings"
                    ></TextView>
                <TextView
                    android:id="@+id/textview_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="14sp"
                    android:text="QAR 15"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/textview_job_title"
                    android:layout_toRightOf="@+id/textview_earnings_text"
                    ></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_horizontal">
            <View
                android:id="@+id/viewInitialLine"
                android:layout_width="2dp"
                android:layout_height="16dp"
                android:background="@color/yellow"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tick_circular_green"
                android:layout_gravity="center_horizontal"/>
            <View
                android:id="@+id/timeLinePath"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:elevation="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/single_job_bg_green">
                <TextView
                    android:id="@+id/textview_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/order_number_bg_green"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:text="03"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textview_order_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/payment_bg_green"
                    android:fontFamily="@font/rubik_regular"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:text="@string/card_payment"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textview_order_delivery_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_below="@+id/textview_order_payment_method"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@drawable/location_pin"
                    android:drawablePadding="10dp"
                    android:background="@drawable/bubble_box_top_right_green"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:text="Musither"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
                <ImageView
                    android:id="@+id/imageView_order_upDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewSeparator"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_baseline_expand_more_24" />

                <RelativeLayout
                    android:id="@+id/relativeHiddenView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_order_shippingAddress_text"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/address1"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="10dp"
                        android:lines="3"
                        android:maxLines="4"
                        android:text="@string/yalla_card_address"
                        android:textColor="@color/card_text_address_black"></TextView>

                </RelativeLayout>







                <TextView
                    android:id="@+id/textview_order_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textview_order_delivery_location"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Order "
                    android:textColor="@color/card_text_black"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/textview_order_id_value"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textview_order_delivery_location"
                    android:layout_toRightOf="@+id/textview_order_id_text"
                    android:fontFamily="@font/rubik_medium"
                    android:text="#13452455"
                    android:textAlignment="center"
                    android:textColor="@color/card_text_black"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/textview_order_itemcount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textview_order_id_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="Items : "
                    android:textAlignment="center"
                    android:textColor="@color/card_text_address_black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_order_itemcount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_below="@+id/textview_order_id_value"
                    android:layout_toRightOf="@+id/textview_order_itemcount_text"
                    android:text="08"
                    android:textAlignment="center"
                    android:textColor="@color/card_text_address_black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_order_total_amount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="14dp"

                    android:layout_below="@+id/textview_order_itemcount_text"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Total Amount : QAR "
                    android:textAlignment="center"
                    android:textColor="@color/card_text_purple"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textview_order_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_below="@+id/textview_order_itemcount"
                    android:layout_toRightOf="@+id/textview_order_total_amount_text"
                    android:fontFamily="@font/rubik_medium"
                    android:text="500.00"
                    android:textAlignment="center"
                    android:textColor="@color/card_text_purple"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_order_shippingAddress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewSeparator"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Shipping Address "
                    android:textAlignment="center"
                    android:textColor="@color/card_text_black"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/viewSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textview_order_total_amount"
                    android:background="@color/green" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
