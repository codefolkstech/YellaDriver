                <RelativeLayout
                    android:id="@+id/relativeHiddenView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_order_shippingAddress_text1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/address2"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="10dp"
                        android:lines="3"
                        android:maxLines="4"
                        android:text="@string/yalla_card_address"
                        android:textColor="@color/card_text_address_black"></TextView>

                </RelativeLayout>







                <TextView
                    android:id="@+id/textview_order_id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textview_order_delivery_location1"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Order "
                    android:textColor="@color/card_text_black"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/textview_order_id_value1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/textview_order_delivery_location1"
                    android:layout_toRightOf="@+id/textview_order_id_text1"
                    android:fontFamily="@font/rubik_medium"
