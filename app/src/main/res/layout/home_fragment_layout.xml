<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/tvDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rubik_medium"
        android:layout_below="@+id/imageViewUser"
        android:text="Alex Thomas"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Truck Driver"
        android:layout_below="@+id/tvDriverName"
        android:layout_marginStart="100dp"
        android:textSize="13sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewEarning"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:layout_below="@id/tvOccupation"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/card_corner_green">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20sp">
            <TextView
                android:id="@+id/tvEarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July \nEarnings"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tvEarningValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEarning"
                android:text="100 QAR"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/graphIcon"
                android:layout_marginRight="10dp"
                />
"

            <ImageView
                android:id="@+id/graphIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/graph" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewJobs"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvOccupation"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/cardviewEarning"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20sp">
            <TextView
                android:id="@+id/tvJobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jobs in \nJuly"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tvJobsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvJobs"
                android:text="2"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/jobsIcon"
                android:layout_marginRight="32dp"
                />
            "

            <ImageView
                android:id="@+id/jobsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/jobs" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewItemReturn"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_below="@id/cardviewEarning"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20sp">
            <TextView
                android:id="@+id/tvReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items to \nReturn"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tvReturnValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvReturn"
                android:text="5"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/returnIcon"
                android:layout_marginRight="20dp"
                />
            "

            <ImageView
                android:id="@+id/returnIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/returnbox" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewCashCollected"
        android:layout_width="190dp"
        android:layout_height="250dp"
        android:layout_below="@id/cardviewJobs"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/cardviewItemReturn"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20sp">
            <TextView
                android:id="@+id/tvCollected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash \ncollected"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tvCollectedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCollected"
                android:text="3800 QAR"
                android:layout_marginTop="5dp"
                android:textSize="25sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/collectedIcon"
                android:layout_marginRight="10dp"
                />
            "

            <ImageView
                android:id="@+id/collectedIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/collected" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>